generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  player
}

model User {
  id              Int           @id @default(autoincrement())
  firstName       String
  lastName        String
  email           String        @unique
  password        String
  role            Role
  game            Game          @relation(fields: [gameId], references: [id])
  gameId          Int           
}

model Game {
  id              Int           @id @default(autoincrement())
  startDate       DateTime
  endDate         DateTime
  status          String
  users           User[]            
} 

model TypingTest {
  id              Int           @id @default(autoincrement())
  wpm             Float
  accuracy        Float
  time            Int
}

model Leaderboard {
  id              Int           @id @default(autoincrement())
  maxPlayers      Int
  type            Int 
  profiles        Profile[]     
}

model Profile {
  id              Int           @id @default(autoincrement())
  username        String        @unique
  bio             String
  avgWPM          Float 
  highestWPM      Float  
  startDate       DateTime      @default(now())
  role            Role
  leaderboards    Leaderboard[] 
}