generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  player
}

model User {
    id              Int         @id @default(autoincrement())
    firstName       String
    lastName        String
    email           String      @unique
    password        String
    role            Role
}

model Profile {
    id              Int         @id @default(autoincrement())
    username        String      @unique
    bio             String
    avgWPM          Float 
    highestWPM      Float  
    startDate       DateTime    @default(now())
    role            Role
}

model TypingTest {
    id              Int         @id @default(autoincrement())
    wpm             Float
    accuracy        Float
    time            Int
}